############################# KEEP THIS BLOCK ##################
def myanalysis(pars, logger, h, ev, doweight=True):

    dataset,isData,histAxisName,year=pars['dataset'],pars['isData'],pars['histAxisName'],pars['year']
    xsec,sow,pass_options,analysis_point=pars['xsec'],pars['sow'],pars['passoptions'],pars['analysispoint']

    from modules.hcoll import hcoll,binning
    hists = hcoll(h, isData, xsec, sow, doweight, process=histAxisName)
    ET.autolog(f"{len(ev)} Events at the start of your analysis", logger, 'i')
############################# KEEP THIS BLOCK ##################

    # Start your analysis``
    #-------------------------------------------------------------------------------------------------------

    if not isData:
         if pass_options=='Xsecweight':
            genw = ev["genWeight"]
            ev["weight_norm"] = (xsec / sow) * genw
            #ev["weight_norm"] =1
         else:
            
            #ev["weight_norm"]=1/ev['nAnalysisEvents']
             ev["weight_norm"]=1

    ev["recoEle"]=ev.Electron[(ev.Electron.cutBased >=3) & (ev.Electron.pt > 0) & (abs(ev.Electron.eta)<2.5)]
    ev["recoMu"]=ev.Muon[(ev.Muon.mediumId==True) & (ev.Muon.pt > 20) & (abs(ev.Muon.eta)<2.1)]
    ev["recoTau"]=ev.Tau[(ev.Tau.idDecayModeNewDMs==True) & (ev.Tau.idAntiMu>=1) & (ev.Tau.idAntiEle>=1)
                                 & (ev.Tau.pt > 30) &  (abs(ev.Tau.eta)<2.5)]  ##idAntiMu is important else it gives muons --> ask Anshul if Chao Chen applies it

    ev["recoPho"]=ev.Photon[(ev.Photon.cutBasedBitmap >=2) & (ev.Photon.pt > 20) & (abs(ev.Photon.eta)<2.5)]

    ev["recoEle2"] = (ak.num(ev.recoEle) >= 2) & (ak.num(ev.recoPho) >= 1)
    ev["recoMu2"] = (ak.num(ev.recoMu) >= 2) & (ak.num(ev.recoPho) >= 1)
    ev["recoTau2"] = (ak.num(ev.recoTau) >= 2) & (ak.num(ev.recoPho) >= 1)

    ev_2Ele = ev[ev.recoEle2==True]
    ev_2Mu = ev[ev.recoMu2==True]
    ev_2Tau = ev[ev.recoTau2==True]
    
    ev_2Ele["dRl1g"] = ev_2Ele.Photon[:,0].delta_r(ev_2Ele.Electron[:,0])
    ev_2Ele["dRl2g"] = ev_2Ele.Photon[:,0].delta_r(ev_2Ele.Electron[:,1])
    ev_2Mu["dRl1g"] = ev_2Mu.Photon[:,0].delta_r(ev_2Mu.Muon[:,0])
    ev_2Mu["dRl2g"] = ev_2Mu.Photon[:,0].delta_r(ev_2Mu.Muon[:,1])
    ev_2Tau["dRl1g"] = ev_2Tau.Photon[:,0].delta_r(ev_2Tau.Tau[:,0])
    ev_2Tau["dRl2g"] = ev_2Tau.Photon[:,0].delta_r(ev_2Tau.Tau[:,1])
    
    ###select ev with dR > 0.4 of the photon with at least one of the electron
    ev_2Ele["passdR_eg"] = (ev_2Ele.dRl1g > 0.4) & (ev_2Ele.dRl2g > 0.4) 
    ev_2Mu["passdR_mg"] = (ev_2Mu.dRl1g > 0.4) & (ev_2Mu.dRl2g > 0.4)
    ev_2Tau["passdR_tg"] = (ev_2Tau.dRl1g > 0.4) & (ev_2Tau.dRl2g > 0.4)

    ev_2Ele_passdR = ev_2Ele[ev_2Ele.passdR_eg==True]
    ev_2Mu_passdR = ev_2Mu[ev_2Mu.passdR_mg==True]
    ev_2Tau_passdR = ev_2Tau[ev_2Tau.passdR_tg==True]

    ####Mass of 3 body object
    ev_2Ele_passdR["llg"]= ev_2Ele_passdR.Electron[:,0] + ev_2Ele_passdR.Electron[:,1] + ev_2Ele_passdR.Photon[:,0]
    ev_2Mu_passdR["llg"]= ev_2Mu_passdR.Muon[:,0] + ev_2Mu_passdR.Muon[:,1] + ev_2Mu_passdR.Photon[:,0]
    ev_2Tau_passdR["llg"]= ev_2Tau_passdR.Tau[:,0] + ev_2Tau_passdR.Tau[:,1] + ev_2Tau_passdR.Photon[:,0]

    ####Condition on mass 
    ev_2Ele_passdR["massWindow"] = (ev_2Ele_passdR.llg.mass > 120) & (ev_2Ele_passdR.llg.mass < 130)
    ev_2Mu_passdR["massWindow"] = (ev_2Mu_passdR.llg.mass > 120) & (ev_2Mu_passdR.llg.mass < 130)
    ev_2Tau_passdR["massWindow"] = (ev_2Tau_passdR.llg.mass > 120) & (ev_2Tau_passdR.llg.mass < 130)
    
    ev_Ele_final_MW = ev_2Ele_passdR[ev_2Ele_passdR.massWindow==True]
    ev_Mu_final_MW = ev_2Mu_passdR[ev_2Mu_passdR.massWindow==True]
    ev_Tau_final_MW = ev_2Tau_passdR[ev_2Tau_passdR.massWindow==True]


    ###################################################
    hists.fill('Meeg',events_Ele_final_MW.weight_norm,(ev_Ele_final_MW.event>0), ev_Ele_final_MW.llg,Meeg="mass")
    hists.fill('Mmmg',events_Mu_final_MW.weight_norm,(ev_Mu_final_MW.event>0), ev_Mu_final_MW.llg, Mmmg="mass")
    hists.fill('Mttg',events_Tau_final_MW.weight_norm,(ev_Tau_final_MW.event>0), ev_Tau_final_MW.llg, Mttg="mass")

    ############################# KEEP THIS BLOCK ##################
    ET.autolog(f"{len(ev)} Ev at the end of your analysis", logger, 'i')
    return hists.get()
    ############################# KEEP THIS BLOCK ##################
